{
    "rules": {
        ".read": "false",
        ".write": "true",
        "subscribers": {
            "Subscriber List": {
                "$form_id": {
                    ".validate": "newData.hasChildren(['email'])",
                    "email": {
                        ".validate": "newData.isString() && newData.val().matches(/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}$/i)"
                    }
                }
            },
            "Collected Data": {
                "$form_id": {
                    ".validate": "newData.hasChildren(['name', 'email', 'subject', 'message'])",
                    "name": {
                        ".validate": "newData.isString() && newData.val().length > 0"
                    },
                    "email": {
                        ".validate": "newData.isString() && newData.val().matches(/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}$/i)"
                    },
                    "subject": {
                        ".validate": "newData.isString() && newData.val().length > 0"
                    },
                    "message": {
                        ".validate": "newData.isString() && newData.val().length > 0"
                    }
                }
            }
    }
}